    function Sort(arr, val, sort) {
        console.log(arr)
    if (val == "name") {
      if (sort == "acc") {
        arr.sort((a, b) =>
          a.name.toLowerCase() > b.name.toLowerCase() ? 1 : -1
        );
        console.log(arr);
      } else {
        arr.sort((a, b) =>
          a.name.toLowerCase() > b.name.toLowerCase() ? -1 : 1
        );
        console.log(arr);
      }
    } else if (val == "job") {
      if (sort == "acc") {
        arr.sort((a, b) =>
          a.job.toLowerCase() > b.job.toLowerCase() ? 1 : -1
        );
        console.log(arr);
      } else {
        arr.sort((a, b) =>
          a.job.toLowerCase() > b.job.toLowerCase() ? -1 : 1
        );
        console.log(arr);
      }
    } else {
      if (sort == "acc") {
        arr.sort((a, b) => (Number(a.salary) > Number(b.salary) ? 1 : -1));
        console.log(arr);
      } else {
        arr.sort((a, b) => (Number(a.salary) > Number(b.salary) ? -1 : 1));
        console.log(arr);
      }
    }
    console.log(arr);
    show(arr)

