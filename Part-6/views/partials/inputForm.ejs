<div class="inputs">
    <form  action="/Employee/add" method="post" id="data">
    <div>
      <label for="name"> Name</label>
      <input  class="form-control" name="name" required onkeypress="return ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 32))" id="name" value="<%= name %> " placeholder="Enter Name..." type="text" />
    </div>
    <div>
      <label for="job"> Job</label>
      <input class="form-control" name="job" required onkeypress="return ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 32))" id="job" value="<%= job %> " placeholder="Enter Job Position..." type="text" />
    </div>
    <div>
      <label for="salary"> Salary</label>
      <input class="form-control" name="salary" id="salary" value="<%= salary %>" required placeholder="Enter Salary..." type="number" />
    </div>

    <div>
      <% if (flag) { %>
        <button type="submit"  class="btn btn-primary add-btn" id="btn">Add</button>
        
        <% } else { %>
          <button type="submit" form="data" formaction="/Employee/<%=id%>" formmethod="post" class="btn btn-primary add-btn" id="btn">edit</button>
        <% } %>
       
      
      <button class="btn btn-primary add-btn" id="search">Search</button>
    </div>
</form>

    </div>